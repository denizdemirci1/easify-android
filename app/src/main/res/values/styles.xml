<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorSpotifyBlack</item>
    <item name="colorPrimaryDark">@color/colorSpotifyBlack</item>
    <item name="colorAccent">@color/colorSpotifyGreen</item>
  </style>

  <!-- Material Design Typography -->
  <style name="Material.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">96sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">60sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">48sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="android:textSize">34sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Body2" parent="TextAppearance.MaterialComponents.Body2">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Button" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Caption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>
  <style name="Material.Overline" parent="TextAppearance.MaterialComponents.Overline">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
  </style>

  <style name="Track.Owner.Name" parent="Material.Subtitle2">
    <item name="android:textColor">@color/colorTextGray</item>
  </style>

  <style name="Button.Green" parent="Material.Button">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
    <item name="android:background">@color/colorSpotifyGreen</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
  </style>

  <style name="Input.Layout" parent="Material.Body1">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorSpotifyWhite</item>
    <item name="android:textColorHint">@color/colorSpotifyWhite</item>
    <item name="android:background">@drawable/bg_input_layout</item>
    <item name="android:paddingStart">8dp</item>
  </style>

  <style name="Toolbar.Title" parent="Material.Headline6">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:fontFamily">@font/roboto</item>
  </style>

</resources>